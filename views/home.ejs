        <div>
            <h1><%= individualPost.title %> </h1>
            <p> <%= individualPost.content.substring(0, 100)+"..." %> 
            <a href="/posts/<%= individualPost._id %>">Read more</a> </p>
        </div>

    <% }); %>
    
</div>

